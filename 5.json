[
  {
    "$match": {
      "year": {
        "$lt": 1950
      },
      "imdb.rating": {
        "$gte": 7.0
      }
    }
  },
  {
    "$lookup": {
      "from": "comments",
      "localField": "_id",
      "foreignField": "movie_id",
      "as": "comments"
    }
  },
  {
    "$project": {
      "title": 1,
      "releaseYear": "$year",
      "genres": 1,
      "imdbRating": "$imdb.rating",
      "comments": {
        "$slice": ["$comments", 2]
      }
    }
  },
  {
    "$project": {
      "title": 1,
      "releaseYear": 1,
      "genres": 1,
      "imdbRating": 1,
      "comments": {
        "$map": {
          "input": "$comments",
          "as": "comment",
          "in": {
            "name": "$$comment.name",
            "text": "$$comment.text"
          }
        }
      }
    }
  }
]

